{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "ahqos-preview"
  },
  "tauri": {
    "allowlist": {
      "process": {
        "exit": true
      },
      "window": {
        "show": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "deb", "dmg"],
      "identifier": "com.ahqsoftwares.ahqos",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "longDescription": "AHQ OS - Preview",
      "shortDescription": "ahqos_prvw.exe"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": false,
        "decorations": false,
        "focus": true,
        "closable": true,
        "title": "ahqOS",
        "width": 800,
        "height": 600
      }
    ]
  }
}
